{
  "name": "astro-live-compiler",
  "version": "0.0.1",
  "description": "Live preview of the TS output of Astro components",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build && pnpm postbuild",
    "postbuild": "node ./scripts/postbuild.cjs",
    "build:ci": "pnpm i @astrojs/compiler@latest && pnpm build",
    "serve": "vite preview"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.18.9",
    "autoprefixer": "^10.4.16",
    "glob": "^10.3.10",
    "ora": "^6.3.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "solid-devtools": "^0.26.1",
    "typescript": "^4.9.5",
    "vite": "^4.5.0",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-solid": "^2.7.2",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "dependencies": {
    "@astrojs/compiler": "^2.3.2",
    "@fontsource/fira-code": "^4.5.13",
    "@fontsource/montserrat": "^4.5.14",
    "@kobalte/core": "^0.6.2",
    "@solid-primitives/media": "^2.2.5",
    "@solid-primitives/scheduled": "^1.4.1",
    "emmet-monaco-es": "^5.3.0",
    "fflate": "^0.7.4",
    "monaco-editor": "^0.36.1",
    "monaco-editor-textmate": "^4.0.0",
    "monaco-textmate": "^3.0.1",
    "monaco-volar": "^0.1.1",
    "onigasm": "^2.2.5",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.8.5",
    "split.js": "^1.6.5",
    "tailwindcss": "^3.3.5",
    "theme-vitesse": "^0.6.4"
  }
}
